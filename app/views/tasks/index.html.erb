<h1 >My tasks</h1>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <% if task.completed? then%>
      <li class= "list-inline">
        <input type="checkbox"  checked ><%= link_to task.title,task_path(task) %> <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" }%>
      </li>
    <% else %>
      <li class= "list-inline">
        <input type="checkbox" > <%= link_to task.title,task_path(task) %> <%= link_to "Delete", task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" }%>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Add a new task", new_task_path %>

