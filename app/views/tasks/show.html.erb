<h1><%= @task.title %></h1>
<button type="button" class='btn btn-light'> <%= link_to "Edit this task", edit_task_path(@task) %></button>

<p><%= @task.details %></p>

<% if @task.completed? then%>
  <p><input type="checkbox"  checked > This task is completed</p>

  <%else%>
  <p><input type="checkbox">
    This task is not yet completed </p>
<% end %>

<p> <%= link_to "Back to list", tasks_path %></p>
